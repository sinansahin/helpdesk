<div class="row">
  <div class="col-md-10 col-md-offset-1">

    <h1>Çağrılar</h1>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>User</th>
          <th>Organization</th>
          <th>Title</th>
          <th>Content</th>
          <th>Ticket category</th>
          <th>Ticket status</th>
          <th>Contact</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tickets.each do |ticket| %>
          <tr>
            <td><%= ticket.user_id %></td>
            <td><%= ticket.organization_id %></td>
            <td><%= ticket.title %></td>
            <td><%= ticket.content %></td>
            <td><%= ticket.ticket_category_id %></td>
            <td><%= ticket.ticket_status_id %></td>
            <td><%= ticket.contact %></td>
            <td><%= link_to 'Show', ticket %></td>
            <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
            <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Ticket', new_ticket_path %>
  </div>
</div>