<p id="notice"><%= notice %></p>

<h1>Listing Ticket Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ticket_statuses.each do |ticket_status| %>
      <tr>
        <td><%= ticket_status.name %></td>
        <td><%= link_to 'Show', ticket_status %></td>
        <td><%= link_to 'Edit', edit_ticket_status_path(ticket_status) %></td>
        <td><%= link_to 'Destroy', ticket_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

