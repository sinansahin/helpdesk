

<h1>Listing Ticket Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Ticket</th>
      <th>User</th>
      <th>Content</th>
      <th>Is done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ticket_tasks.each do |ticket_task| %>
      <tr>
        <td><%= ticket_task.ticket_id %></td>
        <td><%= ticket_task.user_id %></td>
        <td><%= ticket_task.content %></td>
        <td><%= ticket_task.is_done %></td>
        <td><%= link_to 'Show', ticket_task %></td>
        <td><%= link_to 'Edit', edit_ticket_task_path(ticket_task) %></td>
        <td><%= link_to 'Destroy', ticket_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

