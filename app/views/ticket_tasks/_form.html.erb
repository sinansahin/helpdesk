<%= simple_form_for(@ticket_task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :ticket_id %>
    <%= f.input :user_id %>
    <%= f.input :content %>
    <%= f.input :is_done %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
